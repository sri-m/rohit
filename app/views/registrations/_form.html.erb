<%= semantic_form_for @registration do |f| %>
  <%= f.inputs do %>
    <%= f.input :name, :hint => "Please fill", :required => true %>
    <%= f.input :gender, :as => :radio, :collection => ["Male", "Female"] %>
    <%= f.input :category,  :as => :select, :collection => Contact.pluck(:name), :label => "Names"%>
    <%= f.input :address %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>
<% end %>
